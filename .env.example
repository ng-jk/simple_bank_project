# Database Configuration
DB_HOST=127.0.0.1
DB_PORT=3306
DB_NAME=simple_bank_db
DB_USER=bank_user
DB_PASSWORD=bank_password

# Application Configuration
APP_ENV=development
APP_DEBUG=true

# JWT Configuration (used to sign authentication tokens)
# REQUIRED for production! Generate with: php -r "echo base64_encode(random_bytes(32));"
# Keep this secret and NEVER commit it to version control
JWT_SECRET_KEY=

# Email Configuration (for OTP)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USERNAME=your-email@example.com
SMTP_PASSWORD=your-smtp-password
SMTP_FROM_EMAIL=noreply@example.com
SMTP_FROM_NAME="Simple Bank"
